{
    "name": "cambis/silverstripe-rector",
    "description": "Rector rules for Silverstripe.",
    "type": "rector-extension",
    "keywords": [
        "silverstripe",
        "rector"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "rector/rector": "^0.18.6",
        "silverstripe/cms": "^4.0 || ^5.0",
        "silverstripe/framework": "^4.0 || ^5.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6",
        "rector/phpstan-rules": "^0.7.1",
        "symplify/easy-coding-standard": "^12.0",
        "symplify/phpstan-extensions": "^11.4",
        "symplify/phpstan-rules": "^12.4",
        "symplify/rule-doc-generator": "^11.0",
        "tomasvotruba/cognitive-complexity": "^0.2.2"
    },
    "autoload": {
        "psr-4": {
            "SilverstripeRector\\": ["src/", "rules/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SilverstripeRector\\Tests\\": ["tests/src/", "tests/rules/"] 
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "rector/extension-installer": true,
            "silverstripe/vendor-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "docs": "vendor/bin/rule-doc-generator generate rules --output-file docs/rector_rules_overview.md --ansi",
        "lint": [
            "vendor/bin/ecs",
            "vendor/bin/phpstan"
        ],
        "lint:fix": [
            "vendor/bin/ecs --fix"
        ]
    }
}
